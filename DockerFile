# Use Apache with PHP
FROM php:8.2-apache

# Enable Apache mod_rewrite (needed for .htaccess)
RUN a2enmod rewrite

# Copy app files to Apache webroot
COPY . /var/www/html/

# Set working directory
WORKDIR /var/www/html/

# Give proper permissions
RUN chown -R www-data:www-data /var/www/html && chmod -R 755 /var/www/html

# Create storage subfolders and set permissions
RUN mkdir -p storage/logs storage/cache storage/download storage/session storage/upload && \
    chmod -R 777 storage

# Expose port 80
EXPOSE 80

# Start Apache
CMD ["apache2-foreground"]
